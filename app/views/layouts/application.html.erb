<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aptitune</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <link rel="stylesheet" media="screen" href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Aptitune</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav">
        <% if @current_user && @current_user.email == ENV['MY_FACEBOOK_EMAIL'] && @current_user.provider == 'facebook' %>
        <li class="admin-only"><a href="/users">Users</a></li>
        <li class="admin-only"><a href="/test">Player</a></li>
        <li class="admin-only"><a href="/random_artists">Random artists</a></li>
        <% end %>
        <li><a href="#" data-toggle="modal" data-target="#aboutModal">How to Play</a></li>
        <li><a href="#"><i class="glyphicon glyphicon-stats"></i> Leaderboards</a></li>

      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/team">Meet the Team</a></li>
        <% if @current_user %>
        <li><a href="#" data-toggle="modal" data-target="#userModal"><i class="glyphicon glyphicon-dashboard"></i> <%= @current_user.first_name %>'s Dashboard
        </a>
      </li>
      <li><a href="/logout">Logout</a></li>
      <% else %>
      <li><a href="#" data-toggle="modal" data-target="#loginModal">Login</a></li>
      <li><%= link_to 'Signup'.html_safe, signup_path, :class => 'btn btn-success', :data => {toggle:'modal', target:'#myModal' } %></li>
      <% end %>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>

<!-- New Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    </div>
  </div>
</div>

<!-- About Modal -->
<%= render "/layouts/about" %>
<%= render "layouts/flash" %>

<!-- Begin yield -->
<%= yield %>
<!-- End yield -->

<!-- User Modal â€“ will need to solve DRY issue with AJAX -->
<% if @current_user %>
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">
          <%= @current_user.first_name %></h4>
        </div>
        <div class="modal-body">
          <% if @current_user && @current_user.email == ENV['MY_FACEBOOK_EMAIL'] && @current_user.provider == 'facebook' %>
          <ul>
            <li class="admin-only">email: <%= @current_user.email %></li>
            <li class="admin-only">provider: <%= @current_user.provider %></li>
          </ul>
          <% end %>

          <%= bootstrap_form_for @current_user do |f| %>

          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseGenre" aria-expanded="false" aria-controls="collapseGenre">
            Update Genres
          </button>

          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseUser" aria-expanded="false" aria-controls="collapseUser">
            Update Profile
          </button>

          <div class="collapse" id="collapseGenre">
            <div class="well">
              <% if @genres %>
              <%= f.collection_check_boxes :genre_ids, @genres, :id, :name, hide_label: true %>
              <% end %>
            </div>
          </div>
          <div class="collapse" id="collapseUser">
            <div class="well">
              <%= f.text_field :first_name, placeholder: "Your first name", icon: "user" %>
              <%= f.text_field :last_name, placeholder: "Your last name", icon: "user" %>
              <%= f.text_field :email, placeholder: "Your email", icon: "envelope" %>
              <%= f.password_field :password, placeholder: "Your password", icon: "lock" %>

            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.primary %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% else %>

  <!-- login modal -->
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Login</h4>
        </div>
        <div class="modal-body">

          <ul>
            <li><a href="/auth/facebook">Facebook</a></li>
            <li><a href="/auth/google_oauth2">Google</a></li>
            <li><a href="/auth/twitter">Twitter</a></li>
            <li><a href="/auth/linkedin">LinkedIn</a></li>
          </ul>


          <%= bootstrap_form_tag url: '/login' do |f| %>
          <%= f.text_field :email, placeholder: "Your email", icon: "user", hide_label: true %>
          <%= f.password_field :password, placeholder: "Your password", icon: "lock", hide_label: true %>

        </div>
        <div class="modal-footer">
          <%= link_to "Forgot password?", new_password_path, class: "btn btn-danger forgot-password" %>
          <%= f.submit "Login", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>

</body>
</html>