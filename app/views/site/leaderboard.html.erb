<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <h1>Leaderboard</h1>

    </div>
  </div>

  <div class="row">

    <% @genre_hashes.each do |genre_hash| %>
      <div class="col-sm-6">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>genre</th>
              <th>artist %</th>
              <th>album %</th>
              <th>track %</th>
              <th>total quizzes</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= genre_hash[:genre_name] %></td>
              <% (0...genre_hash[:percentages_array].count).each do |i| %>
                <td><%= "%.2f" % genre_hash[:percentages_array][i] %></td>
              <% end %>
              <td><%= genre_hash[:total_quizzes].to_s %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>