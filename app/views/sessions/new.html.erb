<%= bootstrap_form_tag url: '/login' do |f| %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h4 class="modal-title" id="myModalLabel">Login</h4>
</div>
<div class="modal-body">

  <div class="list-group">
    <a class="list-group-item" href="/auth/facebook">
      <i class="fa fa-facebook fa-fw"></i>&nbsp; Login with Facebook
    </a>
    <a class="list-group-item" href="/auth/google_oauth2">
      <i class="fa fa-google fa-fw"></i>&nbsp; Login with Google
    </a>
    <a class="list-group-item" href="/auth/twitter">
      <i class="fa fa-twitter fa-fw"></i>&nbsp; Login with Twitter
    </a>
    <a class="list-group-item" href="/auth/linkedin">
      <i class="fa fa-linkedin fa-fw"></i>&nbsp; Login with LinkedIn
    </a>
  </div>

  <%= f.text_field :email, placeholder: "Email", icon: "user", hide_label: true %>
  <%= f.password_field :password, placeholder: "Password", icon: "lock", hide_label: true %>

</div>
<div class="modal-footer">
  <%= link_to "Forgot password?", new_password_path, class: "btn btn-default" %>
  <%= f.submit "Login", class: "btn btn-primary" %>
</div>
<% end %>