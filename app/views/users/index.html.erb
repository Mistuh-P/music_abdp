<div class="container admin-only">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

      <h1>Users index</h1>

      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Provider</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.first_name, user %></td>
            <td><%= user.email %></td>
            <td><%= user.provider %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>